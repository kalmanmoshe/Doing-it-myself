{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES2021",
    "allowJs": true,
    //"checkJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "lib": [
      "ES2021",
      "DOM",
      "ES5",
      "ES6",
      "ES7"
    ],
    "outDir": "./dist", 
    "rootDir": "./"
  },
  "include": [
    "**/*.ts" 
  ],
  "exclude": [
    "node_modules",
    "dist" 
  ]
}
